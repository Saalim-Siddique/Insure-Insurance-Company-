@model Insure__Insurance_Company_.Models.User


@{
    ViewData["Title"] = "Login";
}

<div class="login-body">
    <div class="login-box">
        <h2>Insurance Portal Login</h2>

        <form asp-controller="Account" asp-action="Login" method="post">

            <label>Email or Full Name</label>
            <input name="loginValue" />

            <div class="password-wrapper">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" id="password" class="password-input" />

                <span class="toggle-password" onclick="togglePassword()">
                    <i id="eyeIcon" class="fa-solid fa-eye"></i>
                </span>
            </div>

            <button type="submit">Login</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color:red">@ViewBag.ErrorMessage</p>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div style="color: green; margin-bottom: 10px;">
                <strong>@TempData["SuccessMessage"]</strong>
            </div>
        }

        <div class="links-login">
            <a asp-controller="Account" asp-action="Sign_Up">Create an Account</a>
        </div>



    </div>
</div>
