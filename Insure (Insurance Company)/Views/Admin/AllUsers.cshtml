@model IEnumerable<Insure__Insurance_Company_.Models.User>

@{
    ViewData["Title"] = "AllUsers";
}
<div class="page-content-wrapper">

    <h1 class="edit-users-title">All Users</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["deluserErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["deluserErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["UpdateSuccess"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["UpdateSuccess"]
        </div>
    }



<div class="admin-users-table-container">
    <table class="admin-users-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="Full Name">@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td data-label="Email">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td data-label="Password">@Html.DisplayFor(modelItem => item.Password)</td>
                    <td data-label="Phone">@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td data-label="Address">@Html.DisplayFor(modelItem => item.Address)</td>
                    <td data-label="Role">@Html.DisplayFor(modelItem => item.Role)</td>
                    <td data-label="Created At">@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td data-label="Created At">@Html.DisplayFor(modelItem => item.DateOfBirth)</td>

                    <td data-label="Actions">
                        <a asp-controller="Admin" asp-action="EditUsers" asp-route-id="@item.UserId" class="action-link">Edit</a> <br/>
                            <a asp-action="DeleteUsers" asp-route-id="@item.UserId" class="action-link"onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
</div>

@if (!Model.Any())
{
    <p class="text-center text-muted mt-4">
        No users found.
    </p>
}


